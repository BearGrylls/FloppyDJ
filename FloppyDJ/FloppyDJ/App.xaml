<Application
    x:Class="FloppyDJ.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FloppyDJ"
    RequestedTheme="Light">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="SystemControlForegroundAccentBrush" Color="#FF007ACC" />
            <SolidColorBrush x:Key="SystemControlHighlightAccentBrush" Color="#FF007ACC" />
            <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#FF007ACC" />
            <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#FF007ACC" />
            <SolidColorBrush x:Key="ToggleSwitchFillOnPointerOver" Color="#FF007ACC" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
